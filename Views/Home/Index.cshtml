@model IEnumerable<SyncProduct>

@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center">
    <h1 class="display-4">Welcome to Ashley's Mock Store!</h1>
    <p><a>Here, I will use APIs from Printful and Paypal Sandbox to create my storefront.</a></p>
</div>

<div class="inventory">
    @foreach (var d in Model)
    {
        <div class="productIcon">
            <a target="_self" href="product/@d.id">
                <div class="imageContainer">
                    <img class="itemImage" src="@d.thumbnail_url" alt="@d.name">
                </div>
            </a>
            <div class="itemInfo">
                <p><b>@d.name</b></p>
                <p>Item #@d.id</p>
                <p><b><a target="_self" href="product/@d.id">Click for more information</a></b></p>
            </div>
        </div>
    }

</div>